<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_40d3fa"
    tools:context="com.xohealth.club.ui.completinginfo.CompletingInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_61_dp"
                android:text="完善资料"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/dimen_20_sp" />
            <FrameLayout
                android:layout_width="@dimen/dimen_93_dp"
                android:layout_height="@dimen/dimen_93_dp"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/ivCamera"
                    android:layout_width="@dimen/dimen_93_dp"
                    android:layout_height="@dimen/dimen_93_dp"
                    android:src="@mipmap/completing_info_camera" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivCameraResult"
                    android:layout_width="@dimen/dimen_93_dp"
                    android:layout_height="@dimen/dimen_93_dp" />
            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_23_dp"
                android:text="填写昵称"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/dimen_11_sp" />

            <EditText
                android:id="@+id/etNick"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_28_dp"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginRight="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_10_dp"
                android:background="@drawable/input_shape"
                android:gravity="center"
                android:hint="好的昵称更能吸引眼球喔"
                android:paddingLeft="@dimen/dimen_14_dp"
                android:paddingRight="@dimen/dimen_14_dp"
                android:textColor="@color/color_b3b3b3"
                android:textSize="@dimen/dimen_13_sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_25_dp"
                android:text="选择生日日期"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/dimen_11_sp" />

            <TextView
                android:id="@+id/tvBirthday"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_28_dp"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginRight="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_10_dp"
                android:background="@drawable/input_shape"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_14_dp"
                android:paddingRight="@dimen/dimen_14_dp"
                android:textColor="@color/color_b3b3b3"
                android:textSize="@dimen/dimen_13_sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30_dp"
                android:layout_marginTop="@dimen/dimen_25_dp"
                android:text="选择性别"
                android:textColor="@color/color_fff"
                android:textSize="@dimen/dimen_11_sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_10_dp">

                <ImageView
                    android:id="@+id/ivMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/male_selector" />

                <ImageView
                    android:id="@+id/ivFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15_dp"
                    android:src="@drawable/female_selector" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_9_dp"
                android:text="注册成功后将不能修改"
                android:textColor="@color/color_ff1880" />

            <ImageView
                android:id="@+id/ivNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dimen_73_dp"
                android:layout_marginTop="@dimen/dimen_33_dp"
                android:src="@mipmap/next_step" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_4_dp"
        android:layout_marginTop="@dimen/dimen_13_dp"
        android:padding="@dimen/dimen_16_dp"
        android:src="@mipmap/back" />
</RelativeLayout>
